@page "/admin/menu"
@attribute [Authorize(Roles = "CanteenManager, SystemAdmin")]

@inject SCMS.WebApp.Services.MenuService WebAppMenuService
@inject NavigationManager NavigationManager
@inject SCMS.WebApp.Services.ToastService WebAppToastService

@if (isDeleteConfirmModalVisible)
{
    <div class="modal-backdrop show"></div>
    <div class="modal show" tabindex="-1" style="display: block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận Xóa</h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteConfirm"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có thật sự muốn xóa món ăn <strong>"@itemToDelete?.Name"</strong> không? Hành động này không thể hoàn tác.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirm">Hủy</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteAsync">Xác nhận Xóa</button>
                </div>
            </div>
        </div>
    </div>
}

<h3>Quản lý Thực đơn</h3>

<div class="d-flex justify-content-between mb-3">
    <button class="btn btn-primary" @onclick="GoToAddPage">
        <span class="oi oi-plus"></span> Thêm món ăn mới
    </button>
</div>

@if (menuItems == null)
{
    <p><em>Đang tải danh sách món ăn...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tên món ăn</th>
                <th>Mô tả</th>
                <th>Giá (VNĐ)</th>
                <th>Danh mục</th>
                <th>Tồn kho</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in menuItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("N0")</td>
                    <td>@item.Category?.CategoryName</td>
                    <td>@item.InventoryQuantity</td>
                    <td>
                        @if (item.IsAvailable)
                        {
                            <span class="badge bg-success">Đang bán</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ngừng bán</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => GoToEditPage(item.ItemId)">
                            <span class="oi oi-pencil"></span> Sửa
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowDeleteConfirm(item)">
                            <span class="oi oi-trash"></span> Xóa
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    private List<MenuItem>? menuItems;
    private bool isDeleteConfirmModalVisible = false;
    private MenuItem? itemToDelete;

    protected override async Task OnInitializedAsync()
    {
        // Tải tất cả món ăn không cần lọc
        menuItems = await WebAppMenuService.GetMenuItemsAsync();
    }

    private void GoToAddPage()
    {
        NavigationManager.NavigateTo("/admin/menu/add");
    }

    private void GoToEditPage(int itemId)
    {
        NavigationManager.NavigateTo($"/admin/menu/edit/{itemId}");
    }

    private void ShowDeleteConfirm(MenuItem item)
    {
        itemToDelete = item;
        isDeleteConfirmModalVisible = true;
    }

    private void HideDeleteConfirm()
    {
        isDeleteConfirmModalVisible = false;
        itemToDelete = null;
    }

    private async Task ConfirmDeleteAsync()
    {
        if (itemToDelete != null)
        {
            var success = await WebAppMenuService.DeleteMenuItemAsync(itemToDelete.ItemId);
            if (success)
            {
                WebAppToastService.ShowToast("Xóa món ăn thành công!");
                menuItems?.Remove(itemToDelete);
            }
            else
            {
                WebAppToastService.ShowToast("Xóa thất bại.", ToastLevel.Danger);
            }

            HideDeleteConfirm();
            StateHasChanged();
        }
    }
}